<div>
  <h1>Ember Calculator</h1>
</div>

<div class="calculator-container">
  <div class="output-container">
    <div class="row row-one">
      <div class="data data-output">{{onDisplay}}</div>
    </div>
  </div>
  <div class="row row-two">
    <button onclick={{action "clickAC"}} class="data data-one ac" data-action="clear">AC</button>
    <button onclick={{action "plusMinus"}} class="data data-one plus-minus">+/-</button>
    <button onclick={{action "percent"}} class="data data-one percent">%</button>
    <button onclick={{action "operator"}} class="data data-one operator divide" data-action="operator">รท</button>
  </div>
  <div class="row row-three">
    <button onclick={{action "numbers"}} class="data data-two seven" data-action="number">7</button>
    <button onclick={{action "numbers"}} class="data data-two eight" data-action="number">8</button>
    <button onclick={{action "numbers"}} class="data data-two nine" data-action="number">9</button>
    <button onclick={{action "operator"}} class="data data-two operator multiply" data-action="operator">x</button>
  </div>
  <div class="row row-four">
    <button onclick={{action "numbers"}} class="data data-three four" data-action="number">4</button>
    <button onclick={{action "numbers"}} class="data data-three five" data-action="number">5</button>
    <button onclick={{action "numbers"}} class="data data-three six" data-action="number">6</button>
    <button onclick={{action "operator"}} class="data data-three operator minus" data-action="operator">-</button>
  </div>
  <div class="row row-five">
    <button onclick={{action "numbers"}} class="data data-four one" data-action="number">1</button>
    <button onclick={{action "numbers"}} class="data data-four two" data-action="number">2</button>
    <button onclick={{action "numbers"}} class="data data-four three" data-action="number">3</button>
    <button onclick={{action "operator"}} class="data data-four operator plus" data-action="operator">+</button>
  </div>
  <div class="row row-six">
    <button onclick={{action "numbers"}} class="data data-five zero" data-action="number">0</button>
    <button onclick={{action "decimal"}} class="data data-five decimal" data-action="decimal">.</button>
    <button onclick={{action "equals"}} class="data data-five equals" data-action="equals">=</button>
  </div>
</div>

{{yield}}